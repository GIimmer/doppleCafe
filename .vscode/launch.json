    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },      
        {
            "name": "Edit Word Bag",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/cafeFinder/research/wordBagFiles/editWordBag.py",
            "console": "integratedTerminal"
        },   
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/cafeFinder/manage.py",
            "args": [
                "runserver",
                "--no-color",
                "--noreload"
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput",
                "DjangoDebugging"
            ]
        }
    ]
}